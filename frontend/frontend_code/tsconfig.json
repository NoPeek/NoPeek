{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@lynx-js/react",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2017",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],

    "strict": true,
    "isolatedModules": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"],
        "@components/*": ["src/components/*"],
        "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["dist/", "lynx/"],
  "include": ["src/**/*","src/*"]
}
